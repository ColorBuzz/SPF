<com.colorbuzztechgmail.spf.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headerContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:background="@drawable/header_selector"
    >

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_white_animatable_counter_clockwise"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/iconsColor"
        android:textSize="@dimen/abc_text_size_large_material" />

    <LinearLayout
        android:id="@+id/expanFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:showDividers="none"
        android:visibility="gone"></LinearLayout>

</com.colorbuzztechgmail.spf.CheckableLinearLayout>