<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@drawable/bg_primary_color"
    android:divider="@drawable/linedrawable"
    android:elevation="1dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:showDividers="none"
    android:weightSum="3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:elevation="0dp">

        <ImageButton
            android:id="@+id/pieceBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/piece_selector"

            android:elevation="2dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_mode_edit_black_24dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/leatherBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/piece_selector"
            android:elevation="2dp"
            app:srcCompat="@drawable/ic_sort_black_24dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1">


        <ImageButton
            android:id="@+id/InfoimageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/piece_selector"
            app:srcCompat="@drawable/ic_share_black_24dp" />
    </FrameLayout>
</LinearLayout>