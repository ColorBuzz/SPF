<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_black_line"
    android:elevation="16dp"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">


    <include
        android:id="@+id/appbar"
        layout="@layout/edit_dialog_title" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/scrollbar_shape_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar"
            android:layout_gravity="top"
            android:layout_weight="0.04"
            android:animateLayoutChanges="true"

            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/animlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/bg_black_line"
                android:clickable="true"
                android:clipToPadding="false"
                android:divider="@drawable/linedrawable"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:id="@+id/previewTxt"
                    style="@style/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_grey_24dp"
                    android:enabled="true"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="@string/piece_view"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/linedrawable"
                    android:orientation="vertical"
                    android:showDividers="beginning">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:enabled="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:text="@string/piece_Name"
                    android:textColor="@color/textColorSecondary"
                    android:textColorLink="@android:color/transparent"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/subTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"

                    android:background="@drawable/edit_selector"

                    android:backgroundTintMode="src_over"

                    android:paddingBottom="8dp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHighlight="@color/colorAccentLight"
                    android:textColorLink="@color/colorAccent"

                    android:textSize="16sp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:enabled="false"
                    android:inputType="text"
                    android:text="@string/piece_Amount"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="8dp">

                        <EditText
                            android:id="@+id/subTextView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"

                            android:layout_weight="1"

                            android:background="@drawable/edit_selector"

                            android:backgroundTintMode="src_over"
                            android:inputType="number"
                            android:paddingBottom="8dp"
                            android:textColor="@color/textColorPrimary"

                            android:textColorHighlight="@color/colorAccentLight"
                            android:textColorLink="@color/colorAccent"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/subTextView2a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"

                            android:layout_weight="1"

                            android:text="@string/piece_Left"

                            android:textColor="@color/textColorSecondary"
                            android:textColorHighlight="@color/colorAccentLight"
                            android:textColorLink="@color/colorAccent"
                            android:textSize="10sp"
                            android:textStyle="italic"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="8dp">

                        <EditText
                            android:id="@+id/subTextView2b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"

                            android:layout_weight="1"

                            android:background="@drawable/edit_selector"

                            android:backgroundTintMode="src_over"
                            android:inputType="number"
                            android:paddingBottom="8dp"
                            android:textColor="@color/textColorPrimary"

                            android:textColorHighlight="@color/colorAccentLight"
                            android:textColorLink="@color/colorAccent"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/subTextView2c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"

                            android:layout_weight="1"


                            android:text="@string/piece_Right"

                            android:textColor="@color/textColorSecondary"
                            android:textColorHighlight="@color/colorAccentLight"
                            android:textColorLink="@color/colorAccent"
                            android:textSize="10sp"
                            android:textStyle="italic"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:enabled="false"
                    android:inputType="text"
                    android:text="@string/piece_Material"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/spinnerMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="false"

                    android:background="@drawable/spinner_bakcground"
                    android:clipChildren="true"
                    android:dropDownSelector="@drawable/drawable_color_accent_gradient"
                    android:scrollbarSize="4dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbarThumbVertical="@drawable/drawable_orange_gradient"
                    android:scrollbarTrackVertical="@drawable/drawable_color_primary_gradient"
                    android:scrollbars="vertical"
                    android:spinnerMode="dialog" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:enabled="false"
                    android:inputType="text"
                    android:text="@string/piece_AmountMaterial"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spinnerSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"

                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_bakcground"
                            android:drawSelectorOnTop="false"
                            android:dropDownSelector="@drawable/drawable_color_accent_gradient"
                            android:scrollbarSize="4dp"
                            android:scrollbarStyle="outsideInset"
                            android:scrollbarThumbVertical="@drawable/drawable_orange_gradient"
                            android:scrollbarTrackVertical="@drawable/drawable_color_primary_gradient"
                            android:scrollbars="vertical" />

                        <TextView
                            android:id="@+id/subTextView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"


                            android:text="@string/piece_BaseSize"

                            android:textColor="@color/textColorSecondary"
                            android:textColorHighlight="@color/colorAccentLight"
                            android:textColorLink="@color/colorAccent"
                            android:textSize="10sp"
                            android:textStyle="italic"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spinnerAmountType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_bakcground"
                            android:drawSelectorOnTop="false"
                            android:dropDownSelector="@drawable/drawable_color_accent_gradient"
                            android:scrollbarSize="4dp"
                            android:scrollbarStyle="outsideInset"
                            android:scrollbarThumbVertical="@drawable/drawable_orange_gradient"
                            android:scrollbarTrackVertical="@drawable/drawable_color_primary_gradient"
                            android:scrollbars="vertical" />

                        <TextView
                            android:id="@+id/subTextView6a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:layout_weight="1"

                            android:text="@string/piece_units"
                            android:textColor="@color/textColorSecondary"
                            android:textColorHighlight="@color/colorAccentLight"
                            android:textColorLink="@color/colorAccent"
                            android:textSize="10sp"
                            android:textStyle="italic"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/subTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"

                    android:background="@drawable/edit_selector"

                    android:backgroundTintMode="src_over"

                    android:hint="@string/piece_setAmounMaterial"
                    android:inputType="numberDecimal"
                    android:paddingBottom="8dp"

                    android:textColor="@color/textColorPrimary"
                    android:textColorHighlight="@color/colorAccentLight"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="16sp"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:enabled="false"
                    android:inputType="text"
                    android:text="@string/observation"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/subTextView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_shape"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>