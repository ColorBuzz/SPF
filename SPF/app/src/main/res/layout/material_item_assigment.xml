<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="true"
    android:animateLayoutChanges="true"
    android:clickable="true"
    app:cardBackgroundColor="@color/iconsColor"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout


        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="@dimen/piece_pic_detail_size"
                android:layout_height="@dimen/piece_pic_detail_size"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_leather_grey" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/lines_shape"
            android:orientation="vertical"
            android:padding="4dp"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_margin="0dp"
                android:clickable="false"
                android:clipToPadding="false"
                android:divider="@drawable/linedrawable"
                android:dividerPadding="0dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="1">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                            android:textColor="@color/textColorPrimary" />

                        <TextView
                            android:id="@+id/subText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/material_Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/textColorSecondary" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                            android:textColor="@color/textColorPrimary" />

                        <TextView
                            android:id="@+id/subText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/material_type"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/textColorSecondary" />
                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_margin="0dp"
                android:clickable="false"
                android:clipToPadding="false"
                android:divider="@drawable/linedrawable"
                android:dividerPadding="0dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:showDividers="middle"
                android:weightSum="1">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                            android:textColor="@color/textColorPrimary" />

                        <TextView
                            android:id="@+id/subText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/material_dealership"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/textColorSecondary" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                            android:textColor="@color/textColorPrimary" />

                        <TextView
                            android:id="@+id/subText4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/material_seasons"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/textColorSecondary" />
                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

