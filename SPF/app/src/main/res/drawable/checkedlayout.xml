<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/iconsColorTransparent"
                android:endColor="@color/colorAccentLight"

                />

            <corners
                android:radius="2pt"

                />

        </shape>
    </item>
    <item android:state_activated="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/iconsColorTransparent"
                android:endColor="@color/colorAccentLight"

                />

            <corners
                android:radius="2pt"

                />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/iconsColorTransparent"
                android:endColor="@color/colorAccentLight"

                />

            <corners
                android:radius="2pt"

                />

        </shape>
    </item>
    <item android:drawable="@color/iconsColor" />

</selector>