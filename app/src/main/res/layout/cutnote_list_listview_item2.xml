<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/lines_shape"
    android:orientation="vertical"
    android:showDividers="end"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <com.colorbuzztechgmail.spf.CheckableLinearLayout
            android:id="@+id/checkLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:animateLayoutChanges="true"
            android:background="@drawable/checkedlayout"
            android:clickable="true"
            android:divider="@drawable/lines_shape"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="@dimen/profile_pic_small_size"
                    android:layout_height="@dimen/profile_pic_small_size"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:visibility="visible">

                </ImageView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:clickable="false"
                    android:clipToPadding="false"
                    android:divider="@drawable/linedrawable"
                    android:dividerPadding="0dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"

                                android:ellipsize="marquee"

                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:rotation="0"

                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="@{obj.model}"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="@color/textColorPrimary" />

                        </LinearLayout>

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:clickable="false"
                    android:clipToPadding="false"
                    android:dividerPadding="4dp"
                    android:orientation="horizontal"
                    android:showDividers="none">

                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="Ref:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/textColorSecondary" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:inputType="number"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text="@{String.valueOf(obj.reference)}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/textColorSecondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:clickable="false"
                        android:clipToPadding="false"
                        android:divider="@drawable/horizontal_divider"
                        android:dividerPadding="2dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp">

                            <TextView
                                android:id="@+id/text8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:drawablePadding="4dp"
                                android:drawableStart="@drawable/ic_person_grey_24dp"
                                android:inputType="number"
                                android:paddingLeft="4dp"
                                android:paddingRight="8dp"
                                android:singleLine="true"
                                android:text="2"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/textColorSecondary" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp">

                            <TextView
                                android:id="@+id/text6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:drawablePadding="4dp"
                                android:drawableStart="@drawable/ic_content_copy_grey_24dp"
                                android:inputType="number"
                                android:paddingLeft="4dp"
                                android:paddingRight="8dp"
                                android:singleLine="true"
                                android:text="@{String.valueOf(obj.noteCount)}"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/textColorSecondary" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/text7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:drawablePadding="4dp"
                                android:drawableStart="@drawable/ic_piece_small"
                                android:inputType="number"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:text="@{String.valueOf(obj.getTotalPairCount())}"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/textColorSecondary" />

                        </FrameLayout>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </com.colorbuzztechgmail.spf.CheckableLinearLayout>

    </LinearLayout>


